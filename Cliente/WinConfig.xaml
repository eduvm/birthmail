<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Cliente.WinConfig"
        Title="Cadastro de Tipos" Height="420" Width="800" MinWidth="800" MinHeight="420" Background="#FF393D44" ResizeMode="NoResize" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" BorderThickness="2" BorderBrush="#FF9B94B9">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                  Source="Resources/Styles/Janela.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>

        <Button x:Name="btnMin" Height="23" Panel.ZIndex="11" Margin="0,4,42,0" Template="{DynamicResource ButtonMin}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="33" />
        <Button x:Name="btnFechar" Height="23" Panel.ZIndex="11" Margin="0,4,5,0" Template="{DynamicResource ButtonFechar}" HorizontalAlignment="Right" VerticalAlignment="Top" Width="33" Click="btnFechar_Click" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="36" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Rectangle x:Name="titleBar" MouseDown="titleBar_MouseDown" Panel.ZIndex="10" Fill="#00000000" />
                <TextBlock Text="MASTER" HorizontalAlignment="Left" FontSize="34" FontFamily="Segoe WP Black" Foreground="White" Margin="10,0,0,0" />
                <TextBlock Text="AUTO PARTS" HorizontalAlignment="Left" FontFamily="Segoe WP Black" Foreground="White" Margin="163,0,0,9" RenderTransformOrigin="1.545,0.6" VerticalAlignment="Bottom" FontSize="16" />
            </Grid>
            <!-- Barra de título -->

            <Grid  Background="White" Margin="5,0" Grid.Row="1">

                <GroupBox Header=" CADASTRO DE TIPOS DE ANIVERSARIANTES" Margin="5" BorderBrush="#FF515D64" BorderThickness="1">

                    <Grid Margin="5">
                        <TextBlock Text="Código:" Margin="0,3,0,0" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="61,0,0,0" Width="64" IsReadOnly="True" Text="{Binding SelectedItem.id, ElementName=dgridTipos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <TextBlock Text="Descrição:" Margin="0,27,0,0" Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Top" />
                        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="61,24,0,0" Width="511" IsReadOnly="True" Text="{Binding SelectedItem.c_tipo, ElementName=dgridTipos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <DataGrid x:Name="dgridTipos" BorderThickness="1" Margin="0,60,0,37" IsReadOnly="True" AutoGenerateColumns="False">

                            <DataGrid.Columns>

                                <DataGridTextColumn Binding="{Binding id}" Header="ID" Width="30" />
                                <DataGridTextColumn Binding="{Binding c_tipo}" Header="DESCRIÇÃO" Width="725" SortMemberPath="id" />

                            </DataGrid.Columns>

                        </DataGrid>
                        <Button x:Name="btnAlterar" Content="Alterar" HorizontalAlignment="Right" Margin="0,0,88,7" VerticalAlignment="Bottom" Width="75" Height="21" Click="btnAlterar_Click"/>

                    </Grid>

                </GroupBox>

            </Grid>

        </Grid>

    </Grid>
</Window>